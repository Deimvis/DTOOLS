#!/usr/bin/env python3
import argparse
import sys
from pathlib import Path


sys.path.append(str(Path(__file__).parent / 'src'))
from cron_manager.cmd import apply_config, print_config


def parse_args():
    parser = argparse.ArgumentParser(description='Cron Manager')
    subparsers = parser.add_subparsers()
    
    apply_parser = subparsers.add_parser('apply', help='Applies given cron config (overrides only configuration under given namespace)')
    apply_parser.set_defaults(run=apply_config)
    apply_parser.add_argument('config', type=str, help='Path to cron config')
    
    print_parser = subparsers.add_parser('print', help='Prints given cron config as canonical cron configuration')
    print_parser.set_defaults(run=print_config)
    print_parser.add_argument('config', type=str, help='Path to cron config')

    return parser.parse_args()

    


def main():
    args = parse_args()
    args.run(args)


if __name__ == '__main__':
    main()
